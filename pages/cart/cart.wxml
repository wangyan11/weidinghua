<view wx:for="{{cart}}" class='cart-item'>
  <image src='{{item.img}}' class='cart-img' />
  <view class='cart-item-right'>
    <view class='cart-price'>￥{{item.price}}.00</view>
    <view>X{{item.count}}</view>
    <view>￥{{item.count*item.price}}.00</view>
  </view>
