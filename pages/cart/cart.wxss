/* pages/cart/cart.wxss */
@import "../../lib/weui.wxss";
.empty{
  text-align: center;
}
.empty-top{
  font-size: 30rpx;
  color: #666666;
  margin-top:100rpx;
  height: 60rpx;
  line-height: 60rpx;
}
p{
  font-size: 26rpx;
  color: #cccccc;
  height: 60rpx;
  line-height: 60rpx;
}
.btn{
  font-size: 26rpx;
  color: #d81e06;
  width: 200rpx;
  background: #fff;
  border: 1rpx solid #d81e06;
  margin-top: 30rpx;
}
.cart-item{
  display: flex;
  margin: 30rpx;
  border: 1rpx solid #dedede;
}
.cart-img{
  width: 35%;
  height: 200rpx;
}
.cart-item-right{
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
  color: #666666;
}
.cart-price{
  color: #e62006;
}
.remove{
  background: #e62006;
  color: white;
  width: 15%;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}