/* pages/mine/mine.wxss */
@import "../../lib/weui.wxss";
page{
  background:  rgba(230, 224, 224, 0.336);
}
.user{
  height: 300rpx;
  border-top: 1rpx solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}
.user-img{
  width: 81rpx;
  height: 81rpx;
  border-radius: 50%;
}
.weui-cells{
  font-size: 24rpx;
  background:  rgba(230, 224, 224, 0.336);
}
.weui-cell{
  background: white;
}
.weui-cell.top{
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 10rpx;
  margin: 10rpx 0;
}
.weui-btn{
  border: 1rpx solid #d81e06;
  background: white;
  color: #d81e06;
  font-size: 24rpx;
  padding: 0;
  margin: 0;
  width: 150rpx;
}
.weui-cell_access{
  margin: 10rpx 0;
}
.cart{
 margin: 10rpx 0;
}
.case{
  display: flex;
  background: white;
  height: 160rpx;
  justify-content: space-around;
  align-items: center;
}
.iconItem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icon{
  width: 40rpx;
  height:40rpx;
}