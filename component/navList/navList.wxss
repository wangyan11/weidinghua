/* component/navList/navList.wxss */
page{
  border-top: 1rpx solid pink;
  height: 100%;
}
.cate{
  display: flex;
  height: 100%;
}
.navList{
  width: 180rpx;
  background: pink;
  height: 500rpx;
  font-size: 28rpx;
  overflow-x: hidden;
}
.normal{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  border-bottom: 1rpx solid white;
  }
  .active{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: white;
    color: pink;
    border-left: 4rpx solid #f00;
  }
  .lists{
    flex: 1;
    margin: 10rpx;
  }
  .list-item{
   display: flex;
    height: 180rpx;
    margin:20rpx 0;
  }
  .list-img{
    width: 40%;
    height: 180rpx;
    background: #09f;
  }
  .list-item-right{
    display: flex;
    flex: 1;
    padding-left: 10rpx;
    flex-direction: column;
    justify-content: space-between;
    font-size: 26rpx;
  }
  .list-item-bottom{
    display: flex;
    width: 100%;
    justify-content: space-between;
  }
  .list-price{
    color: rgb(253, 151, 168);
  }
  .list-btn{
    font-size:  26rpx;
    background: #fff;
    border: 1rpx solid #d81e06;
    color: #d81e06;
  }
